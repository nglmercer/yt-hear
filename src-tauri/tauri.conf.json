{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "tatar",
  "version": "0.0.2",
  "identifier": "com.github.2gn",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "tatar",
        "url": "https://music.youtube.com",
        "width": 800,
        "height": 600,
        "minWidth": 320,
        "minHeight": 320,
        "resizable": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true
      },
      {
        "label": "settings",
        "title": "Settings",
        "url": "/settings",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": false,
        "decorations": true,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self' https://music.youtube.com https://*.googlevideo.com https://*.youtube.com https://*.google.com; script-src 'self' 'unsafe-inline' https://music.youtube.com https://*.youtube.com; style-src 'self' 'unsafe-inline' https://music.youtube.com https://*.youtube.com; img-src 'self' data: https://*.googleusercontent.com https://*.youtube.com https://*.google.com; media-src 'self' https://*.googlevideo.com https://*.youtube.com; connect-src 'self' https://music.youtube.com https://*.youtube.com https://*.google.com"
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "resources": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "tray-icon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Tatar - YouTube Music"
    }
  }
}